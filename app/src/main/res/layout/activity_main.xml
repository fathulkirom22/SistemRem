<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bahwell.sistemrem.MainActivity"
    android:background="#bfdeab">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#bfdeab">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bener"
                android:id="@+id/bener"
                android:layout_marginBottom="15dp"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Petujuk Pengunaan"
                android:id="@+id/petujuk"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/ic_action_petujuk"
                android:textColor="#ffffff"
                android:background="#0c5670"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Materi SIstem Rem"
                android:id="@+id/materi"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/petujuk"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_action_materi"
                android:textColor="#ffffff"
                android:background="#0c5670"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluasi Hasil Belajar"
                android:id="@+id/evaluasi"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/materi"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_action_evaluasi"
                android:textColor="#ffffff"
                android:background="#0c5670"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Aplikasi"
                android:id="@+id/tentang"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/evaluasi"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_action_tentang"
                android:textColor="#ffffff"
                android:background="#0c5670"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/highScore"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="100sp"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="30sp"
                android:text="HIGHSCORE"
                android:gravity="center_vertical|center_horizontal"/>



        </LinearLayout>

    </ScrollView>
</RelativeLayout>
